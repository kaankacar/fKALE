{
  "name": "scaffold-stellar-frontend",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "start": "concurrently \"stellar scaffold watch --build-clients\" \"vite\"",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier . --write",
    "prepare": "husky",
    "build:contracts": "cd contracts/fkale-token && cargo build --target wasm32v1-none --release && cd ../forwards && cargo build --target wasm32v1-none --release",
    "test:contracts": "cd contracts/fkale-token && cargo test && cd ../forwards && cargo test",
    "deploy:fkale": "tsx scripts/deploy-fkale.ts",
    "deploy:forwards": "tsx scripts/deploy-forwards.ts",
    "setup:complete": "tsx scripts/setup-complete.ts",
    "deploy:all": "npm run deploy:fkale && npm run deploy:forwards && npm run setup:complete"
  },
  "dependencies": {
    "@creit.tech/stellar-wallets-kit": "^1.7.5",
    "@stellar/design-system": "^3.1.1",
    "@stellar/stellar-sdk": "^14.0.0-rc.3",
    "@stellar/stellar-xdr-json": "^22.0.0-rc.1.1",
    "@tanstack/react-query": "^5.80.7",
    "bip39": "^3.1.0",
    "lossless-json": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.30.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-dom": "^1.48.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-react-x": "^1.51.0",
    "glob": "^10.4.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "3.5.3",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.1",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-wasm": "^3.4.1"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix --no-warn-ignored",
      "prettier --write --ignore-unknown"
    ]
  }
}
